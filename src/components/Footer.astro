---
import { Icon } from 'astro-icon/components';
import { buttonVariants } from './ui/button';
---

<div
  class="w-full bg-neutral-50 px-6 py-10 text-sm dark:bg-neutral-950 dark:text-white"
>
  <!-- Content within black background -->
  <div
    class="mx-auto grid max-w-4xl grid-rows-3 gap-4 md:grid-cols-3 md:grid-rows-1"
  >
    <div>
      <p class="mb-1 font-bold">Links</p>
      <div class="flex gap-2">
        <a
          class={buttonVariants({ variant: 'outline', size: 'icon' })}
          href="https://github.com/mit-gdg"
        >
          <Icon name="simple-icons:github" />
        </a>
        <a
          class={buttonVariants({ variant: 'outline', size: 'icon' })}
          href="https://discord.com/invite/AadahPesme"
        >
          <Icon name="simple-icons:discord" />
        </a>
        <a
          class={buttonVariants({ variant: 'outline', size: 'icon' })}
          href="https://mit-gdg.itch.io"
        >
          <Icon name="simple-icons:itchdotio" />
        </a>
      </div>
    </div>

    <div>
      <p class="font-bold">Contact</p>
      <p><a href="mailto:gdg-exec@mit.edu">gdg-exec@mit.edu</a></p>
    </div>

    <div>
      <p>
        <a href="https://accessibility.mit.edu">Accessibility</a>
      </p>
    </div>
  </div>
</div>

<style>
  p a {
    @apply underline;
  }
</style>
