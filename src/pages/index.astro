---
import BaseLayout from '@/layouts/BaseLayout.astro';

import FloatingGim from '@/components/FloatingGim.jsx';
import Footer from '@/components/Footer.astro';

import { Icon } from 'astro-icon/components';
import { buttonVariants } from '@/components/ui/button';
import { cn } from '@/lib/utils';
---

<BaseLayout>
  <div
    class="flex min-h-screen items-center font-mono leading-tight tracking-wide"
  >
    <div
      class="relative mx-auto flex w-full max-w-3xl flex-col-reverse items-center justify-center gap-x-4 gap-y-12 px-6 pt-20 md:min-h-screen md:flex-row dark:text-white"
    >
      {/* Intro text */}
      <div class="relative flex cursor-default flex-col md:max-w-lg">
        <h1
          class="z-20 mb-4 font-pixel text-5xl font-black leading-[0.9em] tracking-tighter md:text-5xl"
        >
          MIT GAME DEVELOPERS GUILD
        </h1>
        <p>
          We meet in 2-135 from 7 to 9 pm on Fridays. Come hang out and build
          games! Sometimes we have snacks too.
        </p>

        <a
          class={cn(
            buttonVariants({ variant: 'primary', size: 'lg' }),
            'mt-4 h-12'
          )}
          href="https://discord.com/invite/AadahPesme"
        >
          <Icon name="simple-icons:discord" />
          <span>Join the Discord</span>
        </a>
      </div>

      {/* Gim!! */}
      <div class="-my-10 -ml-10 -mr-16 h-96 w-96 shrink-0">
        <FloatingGim client:load />
      </div>
    </div>
  </div>

  <div
    class="flex min-h-96 justify-center border-t dark:border-neutral-700 dark:text-white"
  >
    <div class="mx-auto w-full max-w-3xl px-6 py-20">
      <h1 class="font-pixel text-3xl font-black uppercase">Officers</h1>
      <div class="flex gap-8"></div>
    </div>
  </div>

  <Footer />
</BaseLayout>

<style>
  body {
    @apply relative h-full dark:bg-neutral-900;
    font-size: 110%;

    /* Add a little scrolling grid of dots :) */
    background-size: 40px 40px;
    animation: moveBackground 6s linear infinite;
    background-image: radial-gradient(
      circle,
      #00000040 1px,
      rgba(0, 0, 0, 0) 1px
    );
  }

  @media (prefers-color-scheme: dark) {
    body {
      background-image: radial-gradient(
        circle,
        #ffffff40 1px,
        rgba(0, 0, 0, 0) 1px
      );
    }
  }

  @keyframes moveBackground {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 40px 40px;
    }
  }
</style>
